# Configuração para Modo TV
TV_MODE=true
NODE_ENV=production

# URLs para modo TV (porta 80)
REACT_APP_API_URL=http://192.168.0.4/api

# Configurações do Backend
SECRET_KEY=tvs-production-secret-key-2024
JWT_SECRET_KEY=tvs-jwt-secret-key-2024
DATABASE_URL=sqlite:///tvs_platform.db

# Configurações de Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# Configurações de Player
DEFAULT_PLAYER_TIMEOUT=30
HEARTBEAT_INTERVAL=10

# Configurações de Chromecast
CHROMECAST_DISCOVERY_TIMEOUT=5
CHROMECAST_CONNECTION_TIMEOUT=10

# Logs
LOG_LEVEL=INFO
