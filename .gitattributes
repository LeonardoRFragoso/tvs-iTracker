# Normalize line endings
* text=auto

# Use LF for source files
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.py   text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.sh   text eol=lf

# Windows scripts can keep CRLF
*.bat  text eol=crlf
*.ps1  text eol=crlf

# Treat media as binary
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.ico  binary
*.bmp  binary
*.svg  text eol=lf
*.mp4  binary
*.mp3  binary
*.mov  binary
*.avi  binary
*.pdf  binary
