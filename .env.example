# Database Configuration
DATABASE_URL=sqlite:///tvs_platform.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-flask-secret-key-here

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600  # 100MB
# Media Base URL (used by Chromecast and compiled video URLs)
# Set this to the reachable URL of your backend from Chromecast devices
MEDIA_BASE_URL=http://localhost:5000

# External APIs (opcional)
NEWS_API_KEY=your-news-api-key
WEATHER_API_KEY=your-weather-api-key

# Socket.IO Configuration
SOCKETIO_ASYNC_MODE=eventlet
# Frontend Socket URL
# The React app uses this as fallback if REACT_APP_SOCKET_URL is not set in .env.local
REACT_APP_SOCKET_URL=http://localhost:5000
